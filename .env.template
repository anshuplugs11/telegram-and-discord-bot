# .env.template - Environment variables template
# Copy this file to .env and fill in your actual values

# ======================
# BOT TOKENS (REQUIRED)
# ======================
DISCORD_TOKEN=your_discord_bot_token_here
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ======================
# OWNER CONFIGURATION
# ======================
OWNER_ID=123456789
# Add additional sudoers (comma-separated)
# SUDOER_2=987654321
# SUDOER_3=456789123

# ======================
# DATABASE
# ======================
DATABASE_URL=sqlite:///musicbot.db

# ======================
# MUSIC SETTINGS
# ======================
MAX_QUEUE_SIZE=100
MAX_SONG_DURATION=3600
DEFAULT_VOLUME=0.5
DOWNLOAD_DIR=./downloads

# ======================
# YOUTUBE API (Optional but recommended)
# ======================
YOUTUBE_API_KEY=your_youtube_api_key_here

# ======================
# BOT SETTINGS
# ======================
MAINTENANCE_MODE=false
LOGGING_ENABLED=true
AUTO_LEAVE_TIMEOUT=300

# ======================
# SPOTIFY (Optional)
# ======================
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_ENABLED=true
MAX_COMMANDS_PER_MINUTE=30

# ======================
# CHANNELS
# ======================
SUPPORT_CHANNEL=https://t.me/your_support_channel
LOG_CHANNEL=

# ======================
# ADVANCED SETTINGS
# ======================
ENABLE_CHANNEL_PLAY=true
ENABLE_VIDEO_CALLS=true
MAX_CONCURRENT_STREAMS=10

# ======================
# RENDER DEPLOYMENT
# ======================
PORT=8080
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# ======================
# UPTIME MONITORING (Optional)
# ======================
# UPTIME_URL_1=https://uptime-service.com/ping/your-id
# UPTIME_URL_2=https://another-service.com/heartbeat/your-key
